#!/bin/sh

# A rofi -dmenu wrapper script for system functions.

case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

locl='betterlockscreen -l blur'
case "$(printf "lock\nleave dwm\nleave openbox\nhibernate\nsleep\nreboot\nshutdown\ndisplay off" | rofi -dmenu -i -p 'Action: ')" in
	'lock') $locl ;;
	'leave dwm') kill -TERM "$(pgrep -u "$USER" "\bdwm$")" ;;
	'leave openbox') kill -TERM "$(pgrep -u "$USER" "\openbox$")" ;;
	'hibernate') $locl $ctl hibernate ;;
	'sleep') $locl $ctl suspend ;;
	'reboot') $ctl reboot ;;
	'shutdown') $ctl poweroff ;;
	'display off') xset dpms force off ;;
	*) exit 1 ;;
esac
