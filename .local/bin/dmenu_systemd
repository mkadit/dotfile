DMENU="rofi -dmenu -i -p Services $@"
export SUDO_ASKPASS="/home/$USER/.local/bin/dmenu_secret"

systemcontrol() {
    service=$(ls "$1" | grep "service" | $DMENU)
    option=$(echo "$1" | cut -d "/" -f 6)
    if [[ $service ]]; then
        action=$(echo -e "Start\nStop\nRestart\nReload\nEnable\nDisable" | $DMENU)
        if [[ $option == "system" ]]; then
            case $action in
            Start) sudo -A systemctl start $service ;;
            Stop) sudo -A systemctl stop $service ;;
            Restart) sudo -A systemctl restart $service ;;
            Reload) sudo -A systemctl reload $service ;;
            Enable) sudo -A systemctl enable $service ;;
            Disable) sudo -A systemctl disable $service ;;
            esac
        else
            case $action in
            Start) systemctl --user start $service ;;
            Stop) systemctl --user stop $service ;;
            Restart) systemctl --user restart $service ;;
            Reload) systemctl --user reload $service ;;
            Enable) systemctl --user enable $service ;;
            Disable) systemctl --user disable $service ;;
            esac
        fi
        if [[ $action ]]; then
            notify-send "Systemd" "$action : $service"
        else
            notify-send "Systemd" "No Action : $service"
        fi
    fi
}

main=$(echo -e "System\nUser" | $DMENU)
case $main in
User) systemcontrol /usr/lib/systemd/user ;;
System) systemcontrol /usr/lib/systemd/system ;;
esac
