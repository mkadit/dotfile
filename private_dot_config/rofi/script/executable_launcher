STYLE="theme/nordic"

rofi \
	-show drun \
	-modi run,drun,ssh \
	-scroll-method 0 \
	-drun-match-fields all \
	-drun-display-format "{name}" \
	-no-drun-show-actions \
	-terminal st \
	-theme ~/.config/rofi/$STYLE/launcher.rasi
